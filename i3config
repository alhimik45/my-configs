bindsym $mod+Tab exec 9menu -popup -teleport -font -*-courier-*-r-*-*-17-120-100-100-*-*-*-*  -bg "#c1c48b" firefox chromium subl steam xchat skype tor-browser transmission-gtk screenshot screenshot-area
bindsym Print exec gnome-screenshot
bindsym Mod3+w exec xscreensaver-command -lock
bindsym $mod+c exec gnome-calculator
bindsym $mod+i exec "gnome-terminal -t PING -e 'ping 8.8.8.8 -s 16'"

#wallpaper
bindsym Mod3+p exec echo next > /tmp/.wp-input

#player
bindsym Mod3+q exec echo pause > /tmp/.fifo-player-input
bindsym Mod3+x exec echo next > /tmp/.fifo-player-input
bindsym Mod3+z exec echo loop > /tmp/.fifo-player-input
bindsym $mod+Mod3+q exec echo increase-volume > /tmp/.fifo-player-input
bindsym $mod+Mod3+a exec echo decrease-volume > /tmp/.fifo-player-input
bindsym $mod+Mod3+z exec echo seek-backward > /tmp/.fifo-player-input
bindsym $mod+Mod3+x exec echo seek-forward > /tmp/.fifo-player-input
bindsym Mod3+s exec echo play-file > /tmp/.fifo-player-input
bindsym Mod3+d exec echo change-directory > /tmp/.fifo-player-input
bindsym Mod3+g exec echo change-random > /tmp/.fifo-player-input
#playlist
bindsym Mod3+f exec echo > /tmp/.playlist-maker-input

#sound
bindsym Mod3+m exec "amixer set Capture toggle 1> /dev/null;killall -USR1 i3status"
bindsym XF86AudioMute exec "amixer -D pulse set Master toggle 1> /dev/null;killall -USR1 i3status"
bindsym XF86AudioLowerVolume exec "amixer sset Master 1%- 1> /dev/null;killall -USR1 i3status"
bindsym XF86AudioRaiseVolume exec "amixer sset Master 1%+ 1> /dev/null;killall -USR1 i3status"

