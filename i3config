#sound
bindsym Mod3+Shift+q exec "amixer set Capture toggle 1> /dev/null;xfce4-panel --plugin-event=genmon-7:refresh:bool:true"
bindsym Mod3+m exec "amixer set Capture toggle 1> /dev/null;xfce4-panel --plugin-event=genmon-7:refresh:bool:true"
bindsym XF86AudioMute exec "amixer -D pulse set Master toggle 1> /dev/null;xfce4-panel --plugin-event=genmon-6:refresh:bool:true"
bindsym XF86AudioLowerVolume exec "amixer sset Master 1%- 1> /dev/null;xfce4-panel --plugin-event=genmon-6:refresh:bool:true"
bindsym XF86AudioRaiseVolume exec "amixer sset Master 1%+ 1> /dev/null;xfce4-panel --plugin-event=genmon-6:refresh:bool:true"

